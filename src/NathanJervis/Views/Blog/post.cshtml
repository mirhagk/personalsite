@model BlogModel
@{
    ViewBag.Title = "post";
}
<div class="header">
    <h1>@Model.Title</h1>
    <h2>Nathan Jervis</h2>
</div>


<div class="content">
    <div>@Html.Raw(Model.BlogPost)</div>
    <div class="pure-g-r">
        <div class="pure-u-1-4">
            <a href="@Html.GetAbsURL("/blog/first")">First Post</a>
        </div>
        <div class="pure-u-1-4">
            @if (Model.Previous != null)
            {
                <a href="@Html.GetAbsURL("/blog/"+Model.Previous)">Previous Post</a>
            }
        </div>
        <div class="pure-u-1-4" style="text-align:right;">
            @if (Model.Next != null)
            {
                <a href="@Html.GetAbsURL("/blog/" +@Model.Next)">Next Post</a>
            }
        </div>
        <div class="pure-u-1-4" style="text-align:right;">
            <a href="@Html.GetAbsURL("/blog/last")">Last Post</a>
        </div>
    </div>
