                    <li class="menu-item-divided"><a href="@(Request.ApplicationPath+"/blog")">Blog</a></li>
                </ul>
            </div>
        </div>

        <div class="pure-u-1" id="main">
            @RenderBody()
        </div>
    </div>
    <div class="footer">
        <hr>
        <div class="pure-g-r">
            <div class="pure-u-1-4"></div>
